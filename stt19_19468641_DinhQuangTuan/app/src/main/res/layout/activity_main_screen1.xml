<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_btn_login_gmail"
    tools:context=".MainActivity_screen1">

    <TextView
        android:id="@+id/tvAPremium"
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="A premium online store for sporter and their stylish choice"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPower"
        android:layout_width="136dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="POWER BIKE  SHOP"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/btnLoginGmail"
        android:layout_width="229dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_btn_login_gmail"
        android:drawableLeft="@drawable/logos_google_icon"
        android:text="Login with Gmail"
        android:textAllCaps="false"
        android:textColor="#020202"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPower"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="344dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_btn_login"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FAFAFA"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginGmail"
        tools:ignore="TouchTargetSizeCheck" />

    <View
        android:id="@+id/view"
        android:layout_width="389dp"
        android:layout_height="276dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_screen1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAPremium" />

    <ImageView
        android:id="@+id/imgBike_screen1"
        android:layout_width="221dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@drawable/bifour__removebg_preview" />
</androidx.constraintlayout.widget.ConstraintLayout>